@model List<UserModel>

<section class="user-card container">
    <h1 class="container d-flex justify-content-center">All Users</h1>

    <hr class="container mb-3 mt-3" />
    @foreach(var user in Model)
    {
        <div class="user-info">
            <h1>Name: @user.FirstName @user.LastName</h1>
            <hr>
            <h2>Email: @user.Email</h2>
            <h2>Phone Number: @user.PhoneNumber</h2>
            <h2>Role: @user.Role</h2>
            <a asp-controller="Admin" asp-action="UpdateUser" asp-route-id="@user.Id">
                <i class="fa-solid fa-pen"></i>
            </a>
        </div>
    }
    <a asp-controller="register" asp-action="index" class="btn-theme">Add New Accounts</a>
</section>

