@model UserRegisterViewModel
@{
    ViewData["Title"] = "Sign U for new Account";
}


<section class="registration-form">
    <div class="container">
        <div class="title">Please Register Your new Account</div>
        <hr>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post" enctype="multipart/form-data" novalidate>
            <div id="input-box-1">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" onkeyup="validate(event)" id="firstName" type="text">
                <span asp-validation-for="FirstName" class="error"></span>
                <div id="firstNameErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" onkeyup="validate(event)" id="lastName" type="text">
                <span asp-validation-for="LastName" class="error"></span>
                <div id="lastNameErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-3">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" onkeyup="validate(event)" id="streetName" type="text">
                <span asp-validation-for="StreetName" class="error"></span>
                <div id="streetNameErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-4">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" onkeyup="validate(event)" id="PostalCode" type="text">
                <span asp-validation-for="PostalCode" class="error"></span>
                <div id="PostalCodeErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-5">
                <label asp-for="City"></label>
                <input asp-for="City" onkeyup="validate(event)" id="City" type="text">
                <span asp-validation-for="City" class="error"></span>
                <div id="CityErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-6">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="error"></span>
            </div>
            <div id="input-box-7">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName">
            </div>
            <div id="input-box-8">
                <label asp-for="Email"></label>
                <input asp-for="Email" onkeyup="validate(event)" id="email" type="email">
                <span asp-validation-for="Email" class="error"></span>
                <div id="emailErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-9">
                <label asp-for="Password"></label>
                <input asp-for="Password" onkeyup="validate(event)" id="password" type="password">
                <span asp-validation-for="Password" class="error"></span>
                <div id="passwordErrorMessage" class="errorMessage"></div>
            </div>
            <div id="input-box-10">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>
            <div id="input-box-11">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl">
            </div>

            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="TermsAndAgreement"></label>
                    <input asp-for="TermsAndAgreement">
                    <span asp-validation-for="TermsAndAgreement" class="checkmark"></span>
                </label>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>
